{
  "name": "cut-serve",
  "productName": "CutServe",
  "version": "1.0.0-beta.8",
  "description": "CutServe â€“ Cut and serve roundnet highlight reels",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "node build-preload.js && vite",
    "build": "vite build && node build-preload.js && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite build && node build-preload.js && electron .",
    "postinstall": "electron-builder install-app-deps",
    "build:python": "cd python && bash build.sh",
    "build:icons": "bash build/generate-icons.sh",
    "build:ffmpeg": "bash build/stage-ffmpeg.sh",
    "build:all": "npm run build:icons && npm run build:ffmpeg && npm run build:python && npm run build",
    "release": "npm run build:icons && npm run build:ffmpeg && npm run build:python && vite build && node build-preload.js && electron-builder --publish always"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.96.0",
    "electron-updater": "^6.8.3",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "html-to-image": "^1.11.13",
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@types/keytar": "^4.4.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.6.3",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.cutserve.app",
    "productName": "CutServe",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "python/dist/",
        "to": "python/",
        "filter": [
          "roundnet-engine",
          "roundnet-engine.exe",
          "roundnet-renderer",
          "roundnet-renderer.exe"
        ]
      },
      {
        "from": "yolov8n-pose.pt",
        "to": "python/yolov8n-pose.pt"
      },
      {
        "from": "public/fonts/",
        "to": "fonts/"
      },
      {
        "from": "public/overlays/",
        "to": "overlays/"
      },
      {
        "from": "vendor/ffmpeg/",
        "to": "ffmpeg/"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "dmg": {
      "title": "CutServe",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "kothhunter",
      "repo": "cutserve"
    }
  }
}
